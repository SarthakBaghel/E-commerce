<%layout('layouts/boilerplate')%>
<%- include('../partials/navbar') %>

<div class="row">
    <div class="col-6 mx-auto">
        <form action="/product/<%=foundProduct.id%>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="naam">Name: </label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the product" value="<%=foundProduct.name%>">
            </div>
            <div class="mb-3">
                <label for="image">Image: </label>
                <input type="text" class="form-control" name="img" id="image" placeholder="Image URL of the product" value="<%=foundProduct.img%>">
            </div>
            <div class="mb-3">
                <label for="paisa">Price: </label>
                <input type="text" class="form-control" name="price" id="paisa" placeholder="Price of the product" value="<%=foundProduct.price%>">
            </div>
            <div class="mb-3">
                <label for="desc">Description: </label>
                <textarea name="desc" id="desc" rows="5" placeholder="Description of the Product"><%=foundProduct.desc%></textarea>
            </div>
            <button class="btn btn-success btn-sm" type="submit">Edit Product</button>
        </form>
    </div>


</div>



    
</body>
</html>